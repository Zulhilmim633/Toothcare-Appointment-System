@if (Model is IEnumerable<Toothcare_Appointment_System.Models.Staff> && User.IsInRole("Admin")) // Admin access the page
{
	IEnumerable<Toothcare_Appointment_System.Models.Staff> Staff = (IEnumerable<Toothcare_Appointment_System.Models.Staff>)Model;
	<ul class="nav nav-tabs nav-fill">
		<li class="nav-item">
			<a class="nav-link active" aria-current="page">Staff</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-action="index" asp-controller="Doctors">Doctor</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-action="index" asp-controller="Appointments">Appointment</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-action="index" asp-controller="Patients">Patient</a>
		</li>
	</ul>


	<h2>Staff List <a asp-action="Create">Add new staff</a></h2>
	<table class="table">
		<thead>
			<tr>
				<th>Staff ID</th>
				<th>Staff Name</th>
				<th>Staff Phone No</th>
				<th>Role</th>
				<th>Staff Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var staff in Staff)
			{
				<tr>
					<td>STF@(@staff.StaffID)</td>
					<td>@staff.StaffName</td>
					<td>@staff.StaffPhoneNo</td>
					<td>@staff.StaffRole</td>
					<td>@staff.StaffEmail</td>
					<td>
						<a asp-action="View" asp-route-id="@staff.StaffID">View</a> |
						<a asp-action="Edit" asp-route-id="@staff.StaffID">Edit</a> |
						<a asp-action="Delete" asp-route-id="@staff.StaffID">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else if (Model is IEnumerable<Toothcare_Appointment_System.Models.AppointmentDTO>) // staff access the page
{
	IEnumerable<Toothcare_Appointment_System.Models.AppointmentDTO> appointmentdto = (IEnumerable<Toothcare_Appointment_System.Models.AppointmentDTO>)Model;

	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link active" aria-current="page">Appointment</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-action="index" asp-controller="Patients">Patient</a>
		</li>
	</ul>

	<h2>Appointment List <a asp-action="Create" asp-controller="Appointments">Create</a></h2>
	<table class="table">
		<thead>
			<tr>
				<th>Schedule</th>
				<th>Reason</th>
				<th>Status</th>
				<th>Notes</th>
				<th>Room Number</th>
				<th>Type</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var appoinment in appointmentdto)
			{
				<tr>
					<td>@appoinment.AppointmentDateTime.ToShortDateString()</td>
					<td>@appoinment.AppointmentReason</td>
					<td>@appoinment.AppointmentStatus</td>
					<td>@appoinment.AppointmentNotes</td>
					<td>@appoinment.RoomNumber</td>
					<td>@appoinment.AppointmentType</td>
					<td>
						<a asp-controller="Appointments" asp-action="View" asp-route-id="@appoinment.AppointmentID">View</a> |
						<a asp-controller="Appointments" asp-action="Edit" asp-route-id="@appoinment.AppointmentID">Edit</a> |
						<a asp-controller="Appointments" asp-action="Delete" asp-route-id="@appoinment.AppointmentID">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h1>@(Model?.GetType())</h1>
}