@model Toothcare_Appointment_System.Models.Staff

<h2>Delete Staff</h2>

<h3>Are you sure you want to delete this staff?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Staff Name
        </dt>
        <dd class="col-sm-10">
            @Model.StaffName
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.StaffPhoneNo
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.StaffEmail
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.StaffRole
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StaffID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
