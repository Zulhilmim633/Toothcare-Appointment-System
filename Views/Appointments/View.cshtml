@model Toothcare_Appointment_System.Models.Appointment

<h2>Appointment</h2>

<div>
	<dl class="row">
		<dt class="col-sm-2">
			Date
		</dt>
		<dd class="col-sm-10">
			@Model.AppointmentDateTime.ToShortDateString()
		</dd>
		<dt class="col-sm-2">
			Reason Appointment
		</dt>
		<dd class="col-sm-10">
			@Model.AppointmentReason
		</dd>
		<dt class="col-sm-2">
			Status
		</dt>
		<dd class="col-sm-10">
			@Model.AppointmentStatus
		</dd>
		<dt class="col-sm-2">
			Type
		</dt>
		<dd class="col-sm-10">
			@Model.AppointmentType
		</dd>
	</dl>

	@if (!User.IsInRole("Admin"))
	{
		<a asp-action="Index" asp-controller="Staff" class="btn btn-secondary">Back</a>
	}
	else
	{
		<a asp-action="Index" class="btn btn-secondary">Back</a>
	}
</div>
