@model Toothcare_Appointment_System.Models.Appointment

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appoinment?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentDateTime.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Reason Appointment
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentReason
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentStatus
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentType
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
