@model Toothcare_Appointment_System.Models.Doctors

<h2>Delete Doctor</h2>

<h3>Are you sure you want to delete this doctor?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Staff Name
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorName
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorPhoneNo
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorEmail
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.DoctorLicenseNumber
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
