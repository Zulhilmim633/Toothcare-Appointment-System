@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<header class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1>Welcome to the <strong>Appoinment Management System</strong></h1>
        <p class="lead">Manage staff, appointments, and patient records efficiently.</p>
        <a href="/login" class="btn btn-light btn-lg text-primary">Get Started</a>
    </div>
</header>

<!-- Quick Access Section -->
<div class="container text-center mt-5">
    <h2>Who Are You?</h2>
    <p>Select your role to proceed:</p>
    <div class="row mt-4">
        <div class="col-md-4">
            <a href="/staff" class="btn btn-outline-primary btn-lg w-100">Admin</a>
        </div>
        <div class="col-md-4">
            <a href="/Doctors" class="btn btn-outline-success btn-lg w-100">Doctor</a>
        </div>
        <div class="col-md-4">
            <a href="/staff" class="btn btn-outline-info btn-lg w-100">Staff</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="bg-light py-5 mt-5">
    <div class="container">
        <h2 class="text-center mb-4">Key Features</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Admin Control</h5>
                        <p class="card-text">Admins can <strong>add, edit, and delete</strong> all data.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Doctor Management</h5>
                        <p class="card-text">Doctors can <strong>update appointments</strong> and <strong>edit profiles</strong>.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Staff</h5>
                        <p class="card-text">Staff can <strong>add appointments, register patients</strong>, and manage profiles.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="text-center py-5">
    <h2>Start Managing Your Appoinment Today!</h2>
    <a href="/login" class="btn btn-primary btn-lg mt-3">Login Now</a>
</section>